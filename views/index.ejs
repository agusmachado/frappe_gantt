<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gantt App</title>

    <!-- Enlaces CDN de Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- Enlaces CDN de Frappe Gantt -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/frappe-gantt/dist/frappe-gantt.min.css">
    <script src="https://cdn.jsdelivr.net/npm/frappe-gantt/dist/frappe-gantt.min.js"></script>

    <!-- Agrega enlaces a tus archivos CSS personalizados aquí -->
</head>
<body class="container-fluid">
    <div class="row justify-content-center">

        <!-- Columna para el diagrama de Gantt -->
        <div class="col-md-9">
            
            <h1 class="mt-4">Proyectos y Tareas</h1>

            <!-- Formulario para crear un nuevo proyecto -->
            <form action="/gantt/proyectos" method="POST" class="mt-4">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label for="nombreProyecto">Nombre del Proyecto:</label>
                        <input type="text" id="nombreProyecto" name="nombre" class="form-control" required>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="fechaInicioProyecto">Fecha de Inicio:</label>
                        <input type="date" id="fechaInicioProyecto" name="fechaInicio" class="form-control" required>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="fechaFinProyecto">Fecha de Fin:</label>
                        <input type="date" id="fechaFinProyecto" name="fechaFin" class="form-control" required>
                    </div>
                    <div class="col-md-3 mb-3 align-self-end">
                        <button type="submit" class="btn btn-primary">Crear Proyecto</button>
                    </div>
                </div>
            </form>

            <!-- Botonera para cambiar la vista -->
            <div class="mt-3">
                <button id="btnAnio" class="btn btn-primary">Año</button>
                <button id="btnMes" class="btn btn-primary">Mes</button>
                <button id="btnSemana" class="btn btn-primary">Semana</button>
                <button id="btnDia" class="btn btn-primary">Día</button>
            </div>
            <!-- Contenedor para el diagrama de Gantt -->
            <div id="gantt" class="mt-4" style="height: 500px;"></div>

            
        </div>
    </div>

<!-- Resto del contenido (script, enlaces, etc.) -->

<div id="proyectos-data" data-proyectos='<%- JSON.stringify(proyectosFrappeGantt || []) %>'></div>



<!-- Configuración y renderizado del diagrama de Gantt -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Recupera los datos de proyectos del atributo data-proyectos
        var proyectosData = document.getElementById('proyectos-data').getAttribute('data-proyectos');
        var proyectos = JSON.parse(proyectosData);
        console.log('Proyectos en EJS:', proyectos);

        const ganttChart = new Gantt("#gantt", proyectos, {
            header_height: 50,
            column_width: 30,
            step: 24,
            view_modes: ['Quarter Day', 'Half Day', 'Day', 'Week', 'Month'],
            bar_height: 40,
            bar_corner_radius: 5,
            arrow_curve: 5,
            padding: 18,
            view_mode: 'Week', // Cambiado a 'Week' por defecto
            date_format: 'YYYY-MM-DD',
            popup_trigger: 'mouseover',
            draggable: true, // Habilitar la funcionalidad de arrastre
            on_click: task => {
                console.log('Clic en tarea:', task);
            },
            on_date_change: (task, start, end) => {
    // Verificar que las fechas sean instancias válidas de Date y que la fecha de inicio sea anterior a la fecha de fin
    if (!(start instanceof Date) || !(end instanceof Date) || start >= end) {
        console.error('Fechas inválidas:', start, end);
        return;
    }

    // Actualizar las fechas de inicio y fin en el objeto de tarea
    task.start = start; // Cambiado de _start a start
    task.end = end;     // Cambiado de _end a end

    // Manejar el cambio de fechas aquí
    console.log('Cambiar fechas de tarea:', task, start, end);

    // Renderizar el gráfico de Gantt nuevamente
    ganttChart.render();
}


,
            custom_popup_html: (task) => {
                // Asegurarse de que _start y _end son objetos de Date
                const start = new Date(task._start);
                const end = new Date(task._end);

                // Calcular la diferencia en milisegundos y convertirla a días
                const duracionDias = Math.ceil((end - start) / (1000 * 60 * 60 * 24));

                // Personaliza el contenido del popup que se muestra al hacer clic en una barra
                return `<div class="popup-container" style="background-color: Aqua; width: 15rem; height: 20vh; color: black;">
                            <h4>${task.name}</h4>
                            <p>Inicio: ${new Date(task._start).toISOString().split('T')[0]}</p>
                            <p>Fin: ${new Date(task._end).toISOString().split('T')[0]}</p>
                            <p>Duración: ${duracionDias} días</p>
                        </div>`;
            },
            language: 'es'
            // Configuraciones opcionales aquí
        });

        // Cambia la vista al cargar la página
        ganttChart.change_view_mode('Week');

        // Renderiza el diagrama de Gantt
        ganttChart.render();

        // Función para cambiar la vista según el botón presionado
        function cambiarVista(vista) {
            ganttChart.change_view_mode(vista);
        }

        // Evento click para los botones
        document.getElementById('btnAnio').addEventListener('click', function () {
            cambiarVista('Year');
        });

        document.getElementById('btnMes').addEventListener('click', function () {
            cambiarVista('Month');
        });

        document.getElementById('btnSemana').addEventListener('click', function () {
            cambiarVista('Week');
        });

        document.getElementById('btnDia').addEventListener('click', function () {
            cambiarVista('Day');
        });
    });
</script>




